<% layout('./layouts/list') -%>

<!-- blog-section-start -->
<section class="blog-sec">
	<div class="container">
		<div class="row ">
			<div class="col-sm-12 d-flex align-items-center justify-content-between  blog-sec-wrap">
				<div class="title-main">
					<h3>
						<% if(page==1){ %>Latest<% } %> Blogs
				</div>
				<form  class="search-feild" action="/page/1">
					<input type="text" placeholder="Search.." name="search" value="<%= search || "" %>" >
					<button  class="search-btn" type="submit">
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M18.031 16.6168L22.3137 20.8995L20.8995 22.3137L16.6168 18.031C15.0769 19.263 13.124 20 11 20C6.032 20 2 15.968 2 11C2 6.032 6.032 2 11 2C15.968 2 20 6.032 20 11C20 13.124 19.263 15.0769 18.031 16.6168ZM16.0247 15.8748C17.2475 14.6146 18 12.8956 18 11C18 7.1325 14.8675 4 11 4C7.1325 4 4 7.1325 4 11C4 14.8675 7.1325 18 11 18C12.8956 18 14.6146 17.2475 15.8748 16.0247L16.0247 15.8748Z" fill="rgba(255,255,255,1)"></path></svg>
					</button>
				  </form>
			</div>
		</div>
		<div id="result">
			<div class="row">
				

				<% blogs.forEach(blog=>{ %>
					
					<div class="col-lg-4 col-md-6 col-sm-12">
						<div class="blog-list-box">
							<figure>
								<img class="w-100" src="<%= s3Base %><%= blog.image1 %>" alt="">
							</figure>
							<h3 class="blog-title" >
								<a href="/details/<%= blog.slug %>" title="<%= blog.title %>" >
									<%= blog.title %>
								</a>
								
							</h3>
							<span>
								<%= moment.unix(blog.added).format("DD MMMM,YYYY - hh:mm A")  %>
							</span>
							<div class="blog-desc">
								<p style="display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden;"> <%- blog.description %> </p>

								


								<!-- <p> <%- blog.description.slice(0, 20) %> </p> -->
	
							</div>
							<a href="/details/<%= blog.slug %>" class="btn-text">
								READ MORE
							</a>
						</div>
					</div>
					
				<% }) %>
				
			</div>


			

			<div class="row">
				<div class="col-sm-12 p-0">
					<div class="custom-pagination">
						<nav aria-label="Page navigation example">
							<%- paging %>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


