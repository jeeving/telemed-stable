<% layout('../layouts/list') -%>
    <div class="row marginLess25">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-left">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item">Dashboard</li>
                        <li class="breadcrumb-item "><a href="/organizations/list">Organization</a></li>
                        <li class="breadcrumb-item active"><a href="javascript:void(0);">Payment</a></li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="page-title-box">
                <h4 class="page-title">Organization <%= organization.name %> </h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table nowrap" id="request-datatable">
                        <thead>
                            <tr>
                                <th>S.NO.</th>
                                <th>Transaction Date</th>
                                <th>Plan End Date</th>
                                <th>Accounts</th>
                                <th>Amount</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <% organization.payment.forEach( (x,i)=>{ %>
                                <tr>
                                    <td>
                                        <%= i+1 %>
                                    </td>
                                    <td>
                                        <%= moment.unix(x.receivedTime).format("YYYY-MM-DD HH:mm") %>
                                    </td>

                                    <td>
                                        <% if(x.endDate){ %> <%= moment.unix(x.endDate).format("YYYY-MM-DD") %> <% } %>
                                    </td>

                                    <td>
                                        <%= x.numAccount || "" %>
                                    </td>

                                    <td>
                                        $<%= x.amount || "" %>
                                    </td>
                                    
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <!-- <div class="row tableLoader">
                    <div class="col-sm-12 text-center">
                        <div class="spinner-border avatar-md text-primary m-2" role="status"></div>
                    </div>
                </div> -->
                </div>
            </div>
        </div>
    </div>

    