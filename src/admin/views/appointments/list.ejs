<% layout('../layouts/list') -%>
<style>
.text-wrap{
    white-space:normal;
}
.width-200{
    width:200px;
}
</style>
<div class="row margin">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-left">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active"><a href="javascript: void(0);">Appointments</a></li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Appointment list</h4>
        </div>
    </div>
</div>
<div class="col-lg-12 text-right">
    <div class="form-group mb-3 text-right">
    </div>
  </div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                  <div id="appointments-datatable_filter" class="dataTables_filter" style="text-align: right;">
                    <label style="font-weight: normal;white-space: nowrap;text-align: left;">Status:  
                        <select id='searchByStatus' class="form-control form-control-sm" placeholder="" aria-controls="appointments-datatable" style="margin-left: 0.5em;display: inline-block;width: 200px;">
                    <option value=''>Select Status</option> 
                    <option value='true'>Completed</option>
                    <option value='false'>Cancelled</option>
                  </select></label>
                </div>
                <table class="table nowrap table-sm" id="appointments-datatable" data-parent="">
                    <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Appointment ID</th>
                        <th>Doctor name</th>
                        <th>Consultant name</th>
                        <th>Appointment date-time</th>
                        <th>Consultation reason</th>
                        <th>Mode of communication</th>
                        <th>Amt. paid by Dr.</th>
                        <th>Admin commission</th>
                        <th>Payment Status</th>
                        <th>Status</th>
                        <th>Created</th> 
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div class="row tableLoader">
                    <div class="col-sm-12 text-center">
                        <div class="spinner-border avatar-md text-primary m-2" role="status"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>