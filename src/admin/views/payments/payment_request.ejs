<% layout('../layouts/list') -%>
<div class="row margin">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-left">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active"><a href="javascript: void(0);">Payment Request List</a></li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Payment Request list</h4>
        </div>
    </div>
</div>
<div class="col-lg-12 text-right">
    <div class="form-group mb-3 text-right">
      <!-- <a type="submit" class="btn btn-primary waves-effect waves-light"  href="/appointments/add">Add Advertisement</a> -->
    </div>
  </div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                  <div id="appointments-datatable_filter" class="dataTables_filter" style="text-align: right;"><label>Status:  <select id='paymentsRequestByStatus' class="form-control form-control-sm" placeholder="" aria-controls="payments-datatable" style="margin-left: 0.5em;display: inline-block;width: auto;">
                    <option value=''>Select Status</option> 
                    <option value='APPROVED'>Approve</option>
                    <option value='PENDING'>Pending</option>
                    <option value='REJECT'>Reject</option>
                  </select></label>
                </div>

                <table class="table nowrap" id="payments-request-datatable" data-parent="">
                    <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Consultant Name</th>
                        <th>Amount</th>
                        <th>Request Date</th>
                        <th>Status</th>
                        <th>Action</th>
                        <th>View</th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div class="row tableLoader">
                    <div class="col-sm-12 text-center">
                        <div class="spinner-border avatar-md text-primary m-2" role="status"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

$(document).on('change', '#changeStatus', function (e) {
    e.preventDefault();
    const value = $(this).val();
    const requestId = $(this).attr("requestId");

    if(requestId){
        Swal.fire({
                    title: 'Are you sure?',
                    type: 'warning',
                    showCancelButton: !0,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes!'
        }).then(function (t) {
                t.value && (window.location.href = `/payments/update-payment-status?status=${value}&requestId=${requestId}`);
        });
    }
    
});
</script>