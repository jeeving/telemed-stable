<% layout('../layouts/list') -%>
<div class="row marginLess25">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-left">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">Dashboard</li>
                    <li class="breadcrumb-item active"><a href="javascript: void(0);">Documents</a></li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title">Documents</h4>
        </div>
    </div>
</div>
<div class="col-lg-12 text-right">
    <div class="form-group mb-3 text-right">
      <a type="submit" class="btn btn-primary waves-effect waves-light"  href="/documents/add">Add document</a>
    </div>
  </div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table class="table nowrap" id="documents-datatable">
                    <thead>
                    <tr>
                        <th>S.NO.</th>
                        <th>Title</th>
                        <th>File</th>
                        
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                        <% documents.forEach( (document,i)=>{ %>
                            <tr>
                                <td><%= i+1  %></td>
                                <td><%= document.title  %></td>
                                <td>
                                    <a href="<%= s3Path+document.path %>" target="_blank" >
                                        View
                                    </a>
                                    
                                </td>
                                
                                <td>
                                    <a href="/documents/delete/<%= document._id %>" title="Remove" class="deleteItem"> <i class="fas fa-trash"></i> </a>
                                </td>
                            </tr>
                        <% }) %>

                        


                    </tbody>
                </table>
                <div class="row tableLoader">
                    <div class="col-sm-12 text-center">
                        <!-- <div class="spinner-border avatar-md text-primary m-2" role="status"></div> -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
